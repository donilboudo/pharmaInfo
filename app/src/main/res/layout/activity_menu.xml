<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ilboudofabrice.pharmainfo.activities.MenuActivity">

    <ImageButton
        android:layout_width="125sp"
        android:id="@+id/btnFindScheduledPharmacies"
        android:layout_alignTop="@+id/btnPharmacies"
        android:layout_toEndOf="@+id/btnPharmacies"
        android:layout_marginStart="44dp"
        android:layout_height="140sp"
        app:srcCompat="@drawable/find_pharmacy"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="125sp"
        android:id="@+id/btnHelp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/btnPharmacies"
        android:layout_alignStart="@+id/btnPharmacies"
        android:layout_height="140sp" />

    <ImageButton
        android:layout_width="125sp"
        android:id="@+id/imageButton4"
        android:layout_alignTop="@+id/btnHelp"
        android:layout_alignStart="@+id/btnFindScheduledPharmacies"
        android:src="@drawable/help"
        android:layout_alignEnd="@+id/btnFindScheduledPharmacies"
        android:layout_height="140sp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="125sp"
        android:id="@+id/btnPharmacies"
        android:layout_marginTop="58dp"
        android:layout_marginStart="42dp"
        android:onClick="onShowAllPharmacies"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/pharmacy_logo"
        android:layout_height="140sp"
        android:background="@android:color/transparent" />
</RelativeLayout>
